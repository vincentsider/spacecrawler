{
  "name": "@spacecrawler/crawler",
  "version": "1.0.0",
  "private": true,
  "description": "Web crawler service for voice AI content",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build complete'",
    "schedule": "npm run build && node start.js schedule",
    "schedule:dev": "npm run build && CRAWLER_SCHEDULE_OVERRIDE=true node start.js schedule",
    "crawl:jobs": "npm run build && node start.js jobs",
    "crawl:events": "npm run build && node start.js events",
    "crawl:products": "npm run build && node start.js products",
    "crawl:all": "npm run build && node start.js all",
    "status": "npm run build && node start.js status",
    "run": "npm run build && node start.js run",
    "docker:build": "docker build -t spacecrawler-scheduler -f Dockerfile ../..",
    "docker:run": "docker run --env-file .env spacecrawler-scheduler",
    "docker:compose": "docker-compose up crawler"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "@types/node-cron": "^3.0.11",
    "cheerio": "^1.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "node-cron": "^4.2.0",
    "node-fetch": "^3.3.2",
    "p-limit": "^5.0.0",
    "playwright": "^1.48.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
